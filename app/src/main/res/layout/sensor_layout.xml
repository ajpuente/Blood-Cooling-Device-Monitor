<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="@string/coolant_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:id="@+id/label1"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/coolantTextField"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_below="@+id/label1"
        android:layout_alignRight="@+id/label1"
        android:layout_alignEnd="@+id/label1"
        android:layout_alignLeft="@+id/label1"
        android:layout_alignStart="@+id/label1" />

    <TextView
        android:text="@string/user_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coolantTextField"
        android:layout_marginTop="28dp"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="18sp"
        android:layout_alignRight="@+id/coolantTextField"
        android:layout_alignEnd="@+id/coolantTextField"
        android:layout_alignLeft="@+id/coolantTextField"
        android:layout_alignStart="@+id/coolantTextField" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="17dp"
        android:id="@+id/userTempField"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="@string/cooling_power_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/userTempField"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="N/A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monitorPowerField"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:textAlignment="center"
        android:textSize="18sp" />

</RelativeLayout>